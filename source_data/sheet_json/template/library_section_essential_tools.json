{
  "flow_type": "template",
  "flow_name": "library_section_essential_tools",
  "status": "released",
  "rows": [
    {
      "name": "library_id",
      "value": "essential_tools",
      "exclude_from_translation": true
    },
    {
      "name": "library_id_concat",
      "value": "library_section.@local.library_id",
      "exclude_from_translation": true
    },
    {
      "name": "library_row",
      "value": "@data.@local.library_id_concat",
      "exclude_from_translation": true
    },
    {
      "name": "display_title",
      "value": "@local.library_row.title",
      "exclude_from_translation": true
    },
    {
      "name": "article_prefix",
      "value": "library_article_"
    },
    {
      "name": "article_suffix",
      "value": "_tips_1",
      "exclude_from_translation": true
    },
    {
      "type": "begin_template",
      "name": "header",
      "value": "section_header",
      "action_list": "uncompleted | emit: uncompleted; ",
      "exclude_from_translation": true
    },
    {
      "name": "title",
      "value": "@local.display_title",
      "exclude_from_translation": true
    },
    {
      "type": "end_template"
    },
    {
      "type": "begin_display_grid",
      "name": "grid",
      "parameter_list": "item_width: 150px; item_border: none"
    },
    {
      "type": "begin_items",
      "name": "loop_modules",
      "value": "@data.module_tasks",
      "parameter_list": "filter: !@item.tag_list || @item.tag_list.includes(@fields.child_age_tag);\nsort: number;"
    },
    {
      "name": "packages",
      "value": "ALL",
      "exclude_from_translation": true,
      "condition": "!@item.tag_list || !@global.has_multiple_content_packages"
    },
    {
      "name": "condition_package",
      "value": true,
      "condition": "!@item.tag_list || !@global.has_multiple_content_packages",
      "comment": "Content without a tag is assumed to apply to all tags"
    },
    {
      "name": "packages",
      "value": "@item.tag_list",
      "condition": "!!@item.tag_list && @global.has_multiple_content_packages"
    },
    {
      "name": "condition_package",
      "value": "@calc(@local.packages.includes(@fields.current_package))",
      "condition": "!!@item.tag_list && @global.has_multiple_content_packages"
    },
    {
      "name": "tile_image",
      "value": "@item.image_asset",
      "condition": "@calc(@item.image_asset.endsWith(\".svg\"))"
    },
    {
      "name": "tile_image",
      "condition": "!@calc(@item.image_asset.endsWith(\".svg\"))"
    },
    {
      "type": "tile_component",
      "name": "tile_nav_stack_@item.id",
      "action_list": "click | nav_stack: open | template: @local.article_prefix@item.id@local.article_suffix, header: false;",
      "parameter_list": "style: image_text;\nfirst_line_text: @item.title;\nicon_src: @local.tile_image;",
      "comment": "@local.condition_package"
    },
    {
      "type": "end_items"
    },
    {
      "type": "end_display_grid"
    }
  ]
}