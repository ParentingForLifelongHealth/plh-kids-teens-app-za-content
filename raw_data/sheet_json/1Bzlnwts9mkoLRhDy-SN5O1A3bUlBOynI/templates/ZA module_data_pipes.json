{
  "==content_list==": [
    {
      "flow_type": "generator",
      "flow_name": "gen_prep_articles",
      "status": "released",
      "parameter_list": "input_data_list: modules;\noutput_flow_name: prep_{@gen.id}_articles;\noutput_flow_type: data_pipe;"
    }
  ],
  "gen_prep_articles": [
    {
      "operation": "filter",
      "args_list": "id == \"@gen.relax_id\"",
      "input_source": "relax",
      "comment": "Take relax article from separate data list"
    },
    {
      "operation": "append_columns",
      "args_list": "category_id: relax;\nnested: FALSE;",
      "output_target": "{@gen.id}_relax | local_only;"
    },
    {
      "operation": "filter",
      "args_list": "id == \"@gen.check_in_id\"",
      "input_source": "check_in",
      "comment": "Take check-in article from separate data list"
    },
    {
      "operation": "append_columns",
      "args_list": "category_id: check_in;\nnested: FALSE;",
      "output_target": "{@gen.id}_check_in | local_only;"
    },
    {
      "operation": "filter",
      "args_list": "foreign_key == \"@gen.id\"",
      "input_source": "sub_items",
      "output_target": "{@gen.id}_testing | local_only;"
    },
    {
      "operation": "concat",
      "args_list": "{@gen.id}_relax;\n{@gen.id}_check_in;\n{@gen.id}_testing;",
      "input_source": false
    },
    {
      "operation": "append_columns",
      "args_list": "completed: FALSE",
      "output_target": "{@gen.id}_article_tasks"
    }
  ],
  "gen_prep_articles_merge_attempt": [
    {
      "operation": "filter",
      "args_list": "id == \"@gen.relax_id\"",
      "input_source": "relax",
      "comment": "Take relax article from separate data list"
    },
    {
      "operation": "append_columns",
      "args_list": "category_id: relax;\nnested: FALSE;",
      "output_target": "{@gen.id}_relax | local_only;"
    },
    {
      "operation": "filter",
      "args_list": "id == \"@gen.check_in_id\"",
      "input_source": "check_in",
      "comment": "Take check-in article from separate data list"
    },
    {
      "operation": "append_columns",
      "args_list": "category_id: check_in;\nnested: FALSE;",
      "output_target": "{@gen.id}_check_in | local_only;"
    },
    {
      "operation": "map",
      "args_list": "id: @row.foreign_key;\nnested: @row.nested;",
      "input_source": "page_details",
      "output_target": "mapped_page_details",
      "comment": "Causes error: \n\nTrace: TypeError: {\n  \"message\": \"Cannot read properties of undefined (reading 'length')\",\n  \"step\": {\n    \"operation\": \"map\",\n    \"args_list\": [\n      \"id: @row.foreign_key\",\n      \"nested: @row.nested\"\n    ],\n    \"input_source\": \"page_details\",\n    \"output_target\": \"mapped_page_details\"\n  }\n}"
    },
    {
      "operation": "merge",
      "args_list": "sub_items;\nmapped_page_details",
      "input_source": false
    },
    {
      "operation": "filter",
      "args_list": "foreign_key == \"@gen.id\"",
      "output_target": "{@gen.id}_testing | local_only;"
    },
    {
      "operation": "concat",
      "args_list": "{@gen.id}_relax;\n{@gen.id}_check_in;\n{@gen.id}_testing;",
      "input_source": false
    },
    {
      "operation": "append_columns",
      "args_list": "completed: FALSE",
      "output_target": "{@gen.id}_article_tasks"
    }
  ]
}