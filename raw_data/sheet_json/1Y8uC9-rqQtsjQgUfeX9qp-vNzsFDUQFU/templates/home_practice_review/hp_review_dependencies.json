  "workshop_activity": [
    {
      "name": "activity_title",
      "exclude_from_translation": true
    },
    {
      "name": "pop_up_template"
    },
    {
      "type": "title",
      "name": "title",
      "value": "@local.activity_title"
    },
    {
      "type": "begin_template",
      "name": "content_box",
      "action_list": "completed | emit:completed;\nuncompleted | emit: uncompleted;\ncompleted | pop_up: @local.pop_up_template"
    },
    {
      "type": "end_template"
    }
  ],
  "nav_buttons": [
    {
      "name": "use_completed_chevron",
      "value": false,
      "exclude_from_translation": true
    },
    {
      "name": "use_uncompleted_chevron",
      "value": true,
      "exclude_from_translation": true
    },
    {
      "name": "display_back",
      "value": true,
      "exclude_from_translation": true
    },
    {
      "type": "begin_display_group",
      "name": "buttons",
      "parameter_list": "style: navigation"
    },
    {
      "type": "round_button",
      "name": "button_uncompleted_chevron",
      "action_list": "click | emit:uncompleted",
      "hidden": "(!@local.use_uncompleted_chevron) || (!@local.display_back)",
      "parameter_list": "icon_src: chevron-back;\nstyle: navigation"
    },
    {
      "type": "round_button",
      "name": "button_uncompleted",
      "action_list": "click | emit:uncompleted",
      "hidden": "@local.use_uncompleted_chevron || (!@local.display_back)",
      "parameter_list": "icon_src: caret-back;\nstyle:navigation"
    },
    {
      "type": "button",
      "name": "button_completed",
      "value": "@global.next_button",
      "action_list": "click | emit:completed",
      "hidden": "@local.use_completed_chevron",
      "parameter_list": "style:navigation; text_align: center",
      "style_list": "flex:1"
    },
    {
      "type": "round_button",
      "name": "button_completed_chevron",
      "action_list": "click | emit:completed",
      "hidden": "!@local.use_completed_chevron",
      "parameter_list": "icon_src: chevron-forward;\nstyle: navigation"
    },
    {
      "type": "end_display_group"
    }
  ],
  "pair": [
    {
      "name": "show_animated_section_1",
      "value": true,
      "exclude_from_translation": true
    },
    {
      "name": "show_animated_section_2",
      "value": false,
      "exclude_from_translation": true
    },
    {
      "type": "begin_animated_section",
      "name": "animated_section_1",
      "hidden": "!@local.show_animated_section_1"
    },
    {
      "type": "begin_template",
      "name": "box_1",
      "action_list": "completed | set_local:show_animated_section_2:true; \ncompleted | set_local:show_animated_section_1:false; \nuncompleted | emit:uncompleted; "
    },
    {
      "type": "end_template"
    },
    {
      "type": "end_animated_section"
    },
    {
      "type": "begin_animated_section",
      "name": "animated_section_2",
      "hidden": "!@local.show_animated_section_2"
    },
    {
      "type": "begin_template",
      "name": "box_2",
      "action_list": "completed | emit:completed; \nuncompleted | set_local:show_animated_section_2:false; \nuncompleted  | set_local:show_animated_section_1:true;"
    },
    {
      "type": "end_template"
    },
    {
      "type": "end_animated_section"
    }
