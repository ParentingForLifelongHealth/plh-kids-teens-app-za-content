      "parameter_list": "style: emphasised",
      "condition": "!!@local.row_data.title"
    },
    {
      "type": "audio",
      "name": "audio",
      "value": "@local.row_data.media_asset",
      "exclude_from_translation": true,
      "parameter_list": "transcript_text: @local.row_data.transcript",
      "condition": "@local.row_data.media_type == \"audio\""
    },
    {
      "type": "video",
      "name": "video",
      "value": "@local.row_data.media_asset",
      "condition": "@local.row_data.media_type == \"video\""
    },
    {
      "name": "show_nav_buttons",
      "value": true
    },
    {
      "type": "begin_template",
      "name": "nav_buttons",
      "value": "nav_buttons",
      "action_list": "completed | emit: completed; uncompleted | emit: uncompleted;",
      "condition": "@local.show_nav_buttons"
    },
    {
      "name": "is_standalone_task",
      "value": true,
      "condition": "@fields._deployment_name == \"plh_kids_tz\""
    },
    {
      "type": "end_template"
    }
  ],
