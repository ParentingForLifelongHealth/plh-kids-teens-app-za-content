{
  "==content_list==": [
    {
      "flow_type": "data_list",
      "flow_subtype": "lifecycle_actions",
      "flow_name": "launch_actions",
      "status": "released"
    },
    {
      "flow_type": "template",
      "flow_name": "language_select",
      "status": "released"
    },
    {
      "flow_type": "template",
      "flow_name": "app_update_complete",
      "status": "released"
    },
    {
      "flow_type": "template",
      "flow_name": "app_launch_calculations",
      "status": "released",
      "process_on_start": 1
    }
  ],
  "launch_actions": [
    {
      "lifecycle_event": "app_start",
      "id": "app_start_update_complete",
      "priority": 1,
      "condition_list": "@fields._app_update_downloaded",
      "action_list": "app_update: complete"
    },
    {
      "lifecycle_event": "app_start",
      "id": "app_start_language_select",
      "priority": 2,
      "condition_list": "!@fields.language_selected && @global.has_multiple_languages && @fields.user_mode",
      "action_list": "pop_up: language_select | fullscreen: true, showCloseButton: false"
    },
    {
      "lifecycle_event": "app_start",
      "id": "app_start_accept_terms",
      "priority": 3,
      "condition_list": "!@fields.@global.deployment_terms_field && @fields.user_mode",
      "action_list": "pop_up: accept_terms | fullscreen: true, showCloseButton: false"
    },
    {
      "lifecycle_event": "app_start",
      "id": "app_start_update_prompt",
      "priority": 4,
      "action_list": "app_update: prompt"
    }
  ],
  "language_select": [
    {
      "name": "show_title",
      "value": true
    },
    {
      "type": "title",
      "name": "title",
      "value": "@global.language",
      "condition": "!!(@local.show_title)"
    },
    {
      "name": "language_select_options",
      "value": "@data.language"
    },
    {
      "name": "language_select_options",
      "value": "@data.language_reversed",
      "condition": "@fields._app_language_direction == \"rtl\""
    },
    {
      "type": "radio_button_grid",
      "name": "language_select",
      "value": "@fields._app_language",
      "action_list": "changed | emit: set_language:@local.language_select;\nchanged | emit: force_reload;\n",
      "parameter_list": "answer_list: @local.language_select_options; item_width: 50px"
    },
    {
      "type": "button",
      "name": "button_completed",
      "value": "Continue",
      "action_list": "click | set_field: language_selected: TRUE;\nclick | emit: force_restart; ",
      "parameter_list": "style: navigation"
    }
  ],
  "app_update_complete": [
    {
      "type": "text",
      "name": "text",
      "value": "@global.app_name has downloaded an update. Please restart the app to finish installation."
    },
    {
      "type": "button",
      "name": "button",
      "value": "Restart",
      "action_list": "click | app_update: complete"
    }
  ],
  "app_launch_calculations": [
    {
      "name": "now",
      "value": "@calc(timestamp())",
      "exclude_from_translation": true
    },
    {
      "type": "begin_display_group",
      "name": "is_first_launch",
      "condition": "!(@fields.first_launch_content_version)"
    },
    {
      "type": "set_field",
      "name": "first_launch_ts",
      "value": "@local.now"
    },
    {
      "type": "set_field",
      "name": "first_launch_app_version",
      "value": "@fields._app_version"
    },
    {
      "type": "set_field",
      "name": "first_launch_content_version",
      "value": "@fields._content_version",
      "exclude_from_translation": true
    },
    {
      "type": "end_display_group"
    },
    {
      "name": "app_launches_including_last",
      "value": "@local.now",
      "condition": "!(@fields.app_launch_history)"
    },
    {
      "name": "app_launches_including_last",
      "value": "@fields.app_launch_history; @local.now",
      "condition": "!!(@fields.app_launch_history)"
    },
    {
      "type": "set_field",
      "name": "app_launch_history",
      "value": "@local.app_launches_including_last"
    }
  ]
}